  	/>
	<Transformando/>
	<Bienvenidos/>
	<Descubre/>
	<Desarrollo/>
	<!-- <Carousel/> -->
	<Cards/>
	<Formulario/>
	<Section1
		bg="bg-gradient-to-r from-white to-light-gray"
		style="shadow-md rounded-lg px-8 py-5 text-xl bg-white text-dark-blue hover:bg-cyan hover:text-white hover:shadow-lg transition-colors cursor-pointer duration-300"
		href="/contactanos"
		Atitle="¿Buscando establecer un equipo de alto rendimiento? Estamos preparados para colaborar."
		Btitle="Contáctanos"
  	/>
